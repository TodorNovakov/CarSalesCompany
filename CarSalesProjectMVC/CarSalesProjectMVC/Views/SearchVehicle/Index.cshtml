@model IEnumerable<CarSalesCompanyModels.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

    @using (Html.BeginForm("Index", "SearchVehicle", FormMethod.Get))
    {
    <p>
        Vehicle Type: @Html.DropDownList("vehicleType", String.Empty)
        Producer: @Html.DropDownList("producer", String.Empty)
        Engine Type : @Html.DropDownList("engine",String.Empty)
        Model: @Html.TextBox("model")
        <input type="submit" value="Filter" />
    </p>
    }
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Vehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType1.TypeOfVehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EngineType1.TypeOfEngine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleExtra.Id_Extras)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfProduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransmissionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoupeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Vehicle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType1.TypeOfVehicle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EngineType1.TypeOfEngine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleExtra.Id_Extras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfProduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransmissionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoupeType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sold)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new {  id=item.Id_Vehicle})

        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back to Start Page", "Index","Home")
</p>
